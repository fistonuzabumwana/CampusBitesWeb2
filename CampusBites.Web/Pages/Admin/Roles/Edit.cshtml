@page "{id}"
@model CampusBites.Web.Pages.Admin.Roles.EditModel
@{
    ViewData["Title"] = "Edit Role Name";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleViewModel.Id" />

            <div class="mb-3">
                <label asp-for="RoleViewModel.Name" class="form-label"></label>
                <input asp-for="RoleViewModel.Name" class="form-control" />
                <span asp-validation-for="RoleViewModel.Name" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Save Role Name</button>
                <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}